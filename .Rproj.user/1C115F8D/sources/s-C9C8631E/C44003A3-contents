library(nbastatR)
library(dplyr)
library(ggplot2)
library(tidyr)

lukarook <-
  game_logs(seasons = 2019, league = "NBA", result_types = "player") %>% 
  filter(namePlayer == "Luka Doncic" & numberGameTeamSeason <= 63)

lukasoph <-
  game_logs(seasons = 2020, league = "NBA", result_types = "player") %>% 
  filter(namePlayer == "Luka Doncic")

lukacareer <-
  lukasoph %>% 
  full_join(lukarook)

chart <-
  ggplot(lukacareer, 
         aes(x = numberGameTeamSeason, 
             y = pts, 
             color = yearSeason, group = yearSeason)) +
  geom_line()

chart